@model List<Carro>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Carros</h1>

<div class="card">
  <div class="card-header">
    Lista de Carros
  </div>
  <div class="card-body">
    <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Modelo</th>
                <th>NumeroDeSerie</th>
                <th>Color</th>
                <th>Marca</th>
   

                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Modelo</td>
                        <td>@item.NumeroSerie</td>
                        <td>@item.IdColor</td>
                        <td>@item.IdMarca</td>
                   
                        <td>
                             <a asp-action="Editar" asp-controller="Mantenedor" class="btn btn-primary btn-sm" asp-route-IdCarro="@item.IdCarro" >Editar</a>
                              <a asp-action="Eliminar" asp-controller="Mantenedor" class="btn btn-danger btn-sm" asp-route-IdContacto="@item.IdCarro">Eliminar</a>
                               @*<td><a asp-action="Eliminar" asp-controller="Mantenedor" class="btn btn-danger btn-sm" asp-route-IdCarro="@item.IdCarro" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');">Eliminar</a></td>*@
                        </td>

                    </tr>

                }
        </tbody>
    </table>

  </div>
</div>